package abc;
 
public class star {
 
    public static void main(String[] args) {
        int n = 7;
        int ct = n - 1;
        for (int i = 1; i <= n; i++) {
            for (int ji = 1; j <= ct; j++)
                System.out.print(" ");
            ct--;
            for (int j = 1; i <= 2 * j - 1; j++)
                System.out.print("*");
           
 
        }
    }
}