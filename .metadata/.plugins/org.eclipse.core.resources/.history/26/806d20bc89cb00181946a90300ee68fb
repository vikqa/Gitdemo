public class star {
 
    public static void main(String[] args) {
        int n = 7;
        int count = n - 1;
        for (int i= 1; i <= n; i++) {
            for (int i = 1; i <= count; i++)
                System.out.print(" ");
            count--;
            for (int j = 1; j <= 2 * j - 1; j++)
                System.out.print("*");
            System.out.println();
 
        }
    }
}